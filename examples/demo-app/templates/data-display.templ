package templates

import ui "github.com/marcoschwartz/lite-ui/components"

templ DataDisplayPage() {
	@Layout("Data Display") {
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8">Data Display</h1>

			<!-- Carousel -->
			<div class="mb-8">
				@ui.Card(ui.CardConfig{Title: "Carousel"}, CarouselDemo())
			</div>

			<!-- List -->
			<div class="mb-8 grid grid-cols-1 lg:grid-cols-3 gap-6">
				@ui.Card(ui.CardConfig{Title: "Default List"}, ListDefaultDemo())
				@ui.Card(ui.CardConfig{Title: "Bordered List"}, ListBorderedDemo())
				@ui.Card(ui.CardConfig{Title: "Divided List"}, ListDividedDemo())
			</div>
		</div>
	}
}

templ CarouselDemo() {
	@ui.Carousel("demo-carousel", GetCarouselItems())
}

