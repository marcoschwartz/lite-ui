templ ListDefaultDemo() {
	@ui.List(GetListItems(), "default")
}

templ ListBorderedDemo() {
	@ui.List(GetListItems(), "bordered")
}

templ ListDividedDemo() {
	@ui.List(GetListItems(), "divided")
}

func GetListItems() []ui.ListItem {
	return []ui.ListItem{
		{
			Content: ListItemContent("Dashboard", "View your overview"),
			Icon:    ui.IconHome(),
			Href:    "/",
			Active:  true,
		},
		{
			Content: ListItemContent("Settings", "Manage preferences"),
			Icon:    ui.IconCheck("indigo"),
			Href:    "/settings",
		},
		{
			Content: ListItemContent("Profile", "Edit your profile"),
			Icon:    ui.IconFolder(),
			Href:    "/profile",
		},
		{
			Content: ListItemContent("Disabled Item", "This is disabled"),
			Icon:    ui.IconChart(),
			Disabled: true,
		},
	}
}

templ ListItemContent(title string, subtitle string) {
	<div>
		<p class="font-medium text-gray-900 dark:text-gray-100">{ title }</p>
		<p class="text-sm text-gray-500 dark:text-gray-400">{ subtitle }</p>
	</div>
}
