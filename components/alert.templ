package components

// Alert - Alert/notification component
// Variants: info, success, warning, error
templ Alert(variant string, title string, message string, dismissible bool) {
	<div
		if dismissible {
			x-data="{ show: true }"
			x-show="show"
			x-transition
		}
		class={
			"rounded-lg p-4 flex items-start gap-3",
			templ.KV("bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800", variant == "info"),
			templ.KV("bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800", variant == "success"),
			templ.KV("bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800", variant == "warning"),
			templ.KV("bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800", variant == "error"),
		}
		role="alert"
	>
		<!-- Icon -->
		<div class="flex-shrink-0">
			if variant == "info" {
				<svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
				</svg>
			} else if variant == "success" {
				<svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
				</svg>
			} else if variant == "warning" {
				<svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
				</svg>
			} else if variant == "error" {
				<svg class="w-5 h-5 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
				</svg>
			}
		</div>
		<!-- Content -->
		<div class="flex-1">
			if title != "" {
				<h3 class={
					"text-sm font-semibold mb-1",
					templ.KV("text-blue-800 dark:text-blue-300", variant == "info"),
					templ.KV("text-green-800 dark:text-green-300", variant == "success"),
					templ.KV("text-yellow-800 dark:text-yellow-300", variant == "warning"),
					templ.KV("text-red-800 dark:text-red-300", variant == "error"),
				}>{ title }</h3>
			}
			<p class={
				"text-sm",
				templ.KV("text-blue-700 dark:text-blue-400", variant == "info"),
				templ.KV("text-green-700 dark:text-green-400", variant == "success"),
				templ.KV("text-yellow-700 dark:text-yellow-400", variant == "warning"),
				templ.KV("text-red-700 dark:text-red-400", variant == "error"),
			}>{ message }</p>
		</div>
		<!-- Dismiss button -->
		if dismissible {
			<button
				@click="show = false"
				class={
					"flex-shrink-0 rounded-lg p-1 hover:bg-black/5 dark:hover:bg-white/10 transition-colors",
					templ.KV("text-blue-600 dark:text-blue-400", variant == "info"),
					templ.KV("text-green-600 dark:text-green-400", variant == "success"),
					templ.KV("text-yellow-600 dark:text-yellow-400", variant == "warning"),
					templ.KV("text-red-600 dark:text-red-400", variant == "error"),
				}
			>
				<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
				</svg>
			</button>
		}
	</div>
}
